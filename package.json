{
  "name": "sferra-desktop",
  "version": "0.1.0",
  "description": "Sferra Desktop Proof-of-Concept Electron Browser",
  "author": "Kirill Mescheryakov",
  "license": "MIT",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable -p never",
    "build:mac": "electron-builder --mac dir zip --config.mac.identity=null -p never",
    "build:linux": "electron-builder --linux AppImage tar.gz -p never"
  },
  "build": {
    "appId": "com.sferra.desktop",
    "productName": "sferra-desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "vendor/**"
    ],
    "extraResources": [
      {
        "from": "vendor/",
        "to": "vendor",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "sferra-desktop-${version}-win-${arch}.exe"
    },
    "mac": {
      "identity": null,
      "target": [
        "dir",
        "zip"
      ],
      "artifactName": "sferra-desktop-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "artifactName": "sferra-desktop-${version}-linux-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
